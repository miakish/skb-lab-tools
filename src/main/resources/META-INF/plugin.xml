<idea-plugin>
    <id>ru.skb.lab.intellij.plugins.skb-lab-tools</id>
    <name>SKB LAB Tools</name>
    <vendor email="SalnikovSN@skblab.ru" url="">SalnikovSN</vendor>

    <description><![CDATA[
    <h1>Ð¡reating Java classes using templates inside the plugin</h1>
    <br/>
    Can generate Java files (automatic filling of the GIT_BRANCH variable).<br/>
    Base templates:<br/>
    <ul>
        <li>Class</li>
        <li>Enum</li>
        <li>Interface</li>
    </ul><br/>
    SMX templates:<br/>
    <ul>
        <li>Bean</li>
        <li>SMX Main</li>
        <li>RouteBuilder</li>
    </ul><br/>
    SOC templates:<br/>
    <ul>
        <li>Calculator</li>
        <li>CalculatorTest</li>
        <li>Component</li>
        <li>ComponentImpl</li>
        <li>Repository</li>
        <li>RepositoryImpl</li>
        <li>Service</li>
        <li>ServiceBean</li>
    </ul>
    <br/>
    ]]></description>

    <change-notes><![CDATA[
    <ul>
        <li>icon update</li>
        <li>new templates</li>
    </ul>
    ]]></change-notes>

    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.ultimate</depends>
    <depends>com.intellij.modules.database</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable groupId="tools" displayName="SKB LAB Tools" id="poidem-generator" instance="ru.skb.lab.intellij.plugins.ui.PluginSettingsConfigurable"/>
        <projectService serviceImplementation="ru.skb.lab.intellij.plugins.ui.PluginSettings"/>
        <!-- Add your extensions here -->
        <fileTemplateGroup implementation="ru.skb.lab.intellij.plugins.template.FileTemplatesFactory"/>
    </extensions>

    <actions>
        <group id="org.jetbrains.tutorials.actions.GroupedActions" text="SKB LAB Tools" popup="true" icon="/META-INF/actionIcon.svg">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="WeighingNewGroup"/>
            <action id="smxFileTemplate" class="ru.skb.lab.intellij.plugins.action.project.SmxFileTemplate" text="Create from SMX template" description="Create from SMX template" />
            <action id="createSmxBaseBeans" class="ru.skb.lab.intellij.plugins.action.project.CreateSmxBaseBeansAction" text="Create Main/RouteBuilder/Bean" description="create Main/RouteBuilder/Bean"/>
            <action id="projectTemplate" class="ru.skb.lab.intellij.plugins.action.project.CreateSMXProjectAction" text="Create SMX service" description="Create SMX project" />
            <separator/>
            <action id="socFileTemplate" class="ru.skb.lab.intellij.plugins.action.project.SocFileTemplate" text="Create from SOC template" description="Create from SMX template" />
        </group>

        <action id="jasyptEncryptAction" class="ru.skb.lab.intellij.plugins.action.project.JasyptEncryptAction" text="Jasypt encrypt" description="Jasypt encrypt" icon="/META-INF/actionIcon.svg">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="Copy.Paste.Special"/>
        </action>
        <action id="jasyptDecryptAction" class="ru.skb.lab.intellij.plugins.action.project.JasyptDecryptAction" text="Jasypt decrypt" description="Jasypt decrypt" icon="/META-INF/actionIcon.svg">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="jasyptEncryptAction"/>
        </action>

    </actions>
</idea-plugin>
